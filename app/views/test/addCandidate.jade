extends ../layout

block content
  h3 Enter your details below to begin with the test
  form(method="post" id="addCandidateForm")
    input(type="text" name="firstName" id="firstname" data-from-candidate="#{tests._id}" placeholder="First Name" required="true")
    br
    input(type="text" name="lastName" id="lastname" placeholder="Last Name" required="true")
    br
    input(type="text" name="phone" id="phone" placeholder="Phone number" required="true")
    br
    input(type="Submit" value="Submit")
