extends ../layout

block content
  h3 Give your test here
  - var answers = [];
  #checkBoxes
    each question, index in questions
      p= index+1 +"."
      | #{question.question}
      br
      each option, index in options
        input(type="checkbox" value="#{option}" id="answeredCheckbox" data-test-answer="#{tests._id}" data-candidate-answer="#{candidate.email}" class="selectedAnswer" checked=(true===false ? "checked" : undefined))
        | #{option}
        if((index+1)%3==0 && index!=0)
          -break
        br
      br
      br
    input(type="Submit" id="btnSubmit" value="Submit your answers")
  #divResult
